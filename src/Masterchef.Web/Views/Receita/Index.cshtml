@model IEnumerable<ReceitaIndex>
@{
    TempData["breadcrump.icon"] = "glyphicon glyphicon-pencil";
    TempData["breadcrump.1"] = "Usuário";
}

<div class="row" style="margin-bottom:10px;">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <a asp-action="Inserir" class="btn btn-primary" title="Inserir">Inserir</a>
    </div>
</div>

<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <form asp-action="Index" method="get">
            <div class="input-group">
                <input type="text" name="termSearch" class="form-control" value="@ViewData["termSearch"]" autofocus />
                <span class="input-group-addon" id="basic-addon1">
                    <i class="glyphicon glyphicon-search"></i>
                </span>
            </div>
        </form>
    </div>
</div>

@if (Model != null && Model.Count() > 0)
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Titulo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <div class="col-xs-1 col-sm-1 col-md-4 col-lg-4">
                        <div class="card" style="width: 18rem;">
                            <img src="#" class="card-img-top" alt="img">
                            <div class="card-body">
                                <h5 class="card-title">@item.Titulo</h5>
                                <p class="card-text">@item.Descricao</p>
                                <a asp-action="Detail" asp-route-id="@item.ReceitaId" class="btn btn-primary">Detalhar</a>
                            </div>
                        </div>
                    </div>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <br />
    <p>Não existe dados cadastrados!</p>
}
